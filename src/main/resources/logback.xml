<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="APP_NAME" value="imageSearch"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %class: %msg%n"/>
    <property name="DEFAULT_DIR" value="./"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>${LOG_PATTERN}</Pattern>
        </encoder>
    </appender>

    <logger name="com.example.imageSearch" level="debug"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
